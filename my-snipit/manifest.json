{
  "manifest_version": 3,
  "name": "Area Screenshot",
  "version": "1.0",
  "description": "Take a screenshot of a selected area on the page by clicking and dragging.",
  "permissions": [
    "activeTab",
    "scripting",
    "offscreen",
    "identity"
  ],
  "host_permissions": [
      "*://*.atlassian.net/*",
      "*://*.atlassian.com/*",
      "*://*.atl-paas.net/*",
      "http://127.0.0.1:8080/*"
  ],
  "action": {
    "default_title": "Take Area Screenshot"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
        "resources": ["images/fullscreen.svg", "images/fullscreen-exit.svg"],
        "matches": ["*://*.atlassian.net/*", "*://*.atlassian.com/*"]
    }
  ],
  "key": ""
}
